#!/usr/bin/env bash

#
# WARNING: this script is auto-generated by Ansible - one might need to change the `domain` variable if the domain name changes
#

domain_name={{ domain }}

function flush_hosts_file {
  if [ -f "{{ conf_dir }}/hosts/hosts.dnsmasq" ]
  then
    cp {{ conf_dir }}/hosts/hosts.dnsmasq /tmp/wireguard-dns-hosts.temp
    grep -v "${client_name} ${client_name}.${domain_name}" /tmp/wireguard-dns-hosts.temp > {{ conf_dir }}/hosts/hosts.dnsmasq
    rm -f /tmp/wireguard-dns-hosts.temp
  fi
}

function parse_yaml {
   local prefix=$2
   local s='[[:space:]]*' w='[a-zA-Z0-9_]*' fs=$(echo @|tr @ '\034')
   sed -ne "s|^\($s\):|\1|" \
        -e "s|^\($s\)\($w\)$s:$s[\"']\(.*\)[\"']$s\$|\1$fs\2$fs\3|p" \
        -e "s|^\($s\)\($w\)$s:$s\(.*\)$s\$|\1$fs\2$fs\3|p"  $1 |
   awk -F$fs '{
      indent = length($1)/2;
      vname[indent] = $2;
      for (i in vname) {if (i > indent) {delete vname[i]}}
      if (length($3) > 0) {
         vn=""; for (i=0; i<indent; i++) {vn=(vn)(vname[i])("_")}
         printf("%s%s%s=\"%s\"\n", "'$prefix'",vn, $2, $3);
      }
   }'
}

while read -r endpoint
do
  client_public_ip=$(echo ${endpoint}|awk '{print $2}'|cut -d: -f1)
  private_key=$(echo ${endpoint}|awk '{print $1}')
  connected_client=$(parse_yaml {{ conf_dir }}/configs.yml|grep ${private_key})
  client_name=$(echo ${connected_client}|cut -d_ -f1)
  client_private_ip=$(parse_yaml {{ conf_dir }}/configs.yml|grep ${client_name}|grep cidr|cut -d= -f2|cut -d/ -f1|tr -d '"')
  if [ -n "${client_name}" ] && [ -n "${client_public_ip}" ]
  then
    grep -q "${client_public_ip} ${client_name} ${client_name}.${domain_name}" {{ conf_dir }}/hosts/hosts.dnsmasq || (flush_hosts_file && echo "${client_public_ip} ${client_name} ${client_name}.${domain_name}" >> {{ conf_dir }}/hosts/hosts.dnsmasq)
    grep -q "${client_private_ip} ${client_name} ${client_name}.${domain_name}" {{ conf_dir }}/hosts/hosts.dnsmasq || (flush_hosts_file && echo "${client_private_ip} ${client_name} ${client_name}.${domain_name}" >> {{ conf_dir }}/hosts/hosts.dnsmasq)
  fi
done <<< $(wg show wg-dns-server endpoints|grep -v '(none)')
